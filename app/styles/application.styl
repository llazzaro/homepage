@import 'nib'
@import url(http://fonts.googleapis.com/css?family=Source\+Sans\+Pro:300,400,300italic,400italic)
@import url(http://fonts.googleapis.com/css?family=Open\+Sans:400,700,300)

html, body
  font-family "Open Sans","DejaVu Sans","Helvetica Neue","Helvetica",Helvetica,Arial,sans-serif
  color #333333

h1
    font-size 2.2em

a:hover, a:active
    text-decoration none

h1.big
    font-size 6em
    letter-spacing -4px
    margin-top 0
    margin-left 15%
    margin-bottom 5%

h1.big.even a
    text-decoration none
    color #FFF

.site-header
    border-bottom 5px solid #1E252D

.odd p
    color #D24D33

.odd p span
    color #1E252D

.even p
    color #D24D33

.even p span
    color #FFF

h1.big.odd a
    color #1E252D


h1, h2, h3, h4, h5, h6
    color #1E252D
    line-height 1.4
    font-weight bold
    font-style normal

h1.about_name
    color #000000
    font-family Open Sans
    font-size 40px
    font-weight 700
    letter-spacing 1px
    line-height 50px
    padding-top 30px
    text-align center

h2.about_activity
    color #000000
    font-size 21px
    text-align center
    font-family Open Sans
    font-weight 400
    line-height 100%

.odd
    color #1E252D

.even
    background-color #242D36
    margin-top 2%

img
    border 1px solid #DDDDDD
    float left
    margin 15px

ul
    list-style-type none

h1.text_entry
    font-family 'Fjalla One',sans-serif
    font-size 3em
    letter-spacing 4px
    margin-bottom 20px
    margin-top 0
    text-align center
    text-transform uppercase
    word-spacing 10px

h2.text_entry
    background none repeat scroll 0 0 #FFFFFF
    display inline-block
    font-family 'Fjalla One',sans-serif
    font-size 18px
    letter-spacing 3px
    margin 0
    padding 0 20px
    position relative
    text-transform uppercase
    top -12px
    word-spacing 10px

.meta
    border-top 1px solid #333333
    text-align center

.top-nav-bar-link
    font-family 'Patua One'
    font-size 18px
    text-transform uppercase
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.7)

.active
    color #FF66AA

.about.key
    font-family "Source Code pro"
    font-size 0.9em
    font-weight normal

pre
    font-family "Source Code pro"
    font-size 0.9em
    font-weight normal

p
    font-size: 1.2em
    margin-bottom 1.25em
    line-height 1.6
    text-rendering optimizelegibility

p.meta
    border none
    text-transform uppercase
    text-align left
    line-height 14px
    margin-bottom 0
    margin-left 15%
    margin-top 5%
    font-weight 900
    font-size 2em

article p
    margin-bottom 1em
    text-align justify

p code
    background none repeat scroll 0 0 #444444
    border-radius 0.3em
    color #FFFFFF
    padding 0.1em 0.3em 0.2em
    position relative
    top -0.15em
    white-space nowrap

.full-content
    width 100%

.center-content
    margin-top: 20px
    margin-left: 15%
    width: 70%

.navbar
    margin: 0

.navbar-inverse
    background #242D36

.container
    width: 100%
    height: 100%
    padding: 0

.item
    width 150px
    height 150px
    float left
    background #CCC

.item img
    margin: 0px
    border: none

.item.square
    width 75px
    height 75px

.item.large_square
    width 150px
    height 150px

.item.small
    width 240px
    height 180px

.item.thumbnail
    width 100px
    height 75px

.item.small_320
    width 320px
    height 240px

.item.medium
    width 500px
    height 375px

.item.medium_640
    width 640px
    height 480px

.item.medium_800
    width 800px
    height 600px

.item.large
    width 1024px
    height 768px

.item.large_1600
    width 1600px
    height 1200px

.item.large_2048
    width 2048px
    height 1536px

.item.original
    width 4320px
    height 3240px
